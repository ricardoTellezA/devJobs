<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
         <h3>Información general</h3>

         <div class="campo">
             <label>Titulo</label>
             <input type="text" name="titulo" placeholder="Ej: React Developer" 
             value="{{vacante.titulo}}" required>
         </div>

          <div class="campo">
             <label>Empresa</label>
             <input type="text" name="empresa" placeholder="Empresa Contrata" 
             value="{{vacante.empresa}}"
             required>
         </div>

          <div class="campo">
             <label>Ubicación</label>
             <input type="text"value="{{vacante.ubicacion}}"  name="ubicacion" placeholder="Ej:México o Remoto" required>
         </div>

          <div class="campo">
             <label>Salario (USD)</label>
             <input type="text" name="salario" 
             value="{{vacante.salario}}"
             placeholder="Ej: 500 USD" required>
         </div>

         <div class="campo">
             <label>Contrato</label>
             <select name="contrato">

                 {{#tipoContrato vacante.contrato}}
                 <option value="" disabled selected>-- Selecciona --</option>
                 <option value="Freelance">Freelance</option>
                 <option value="Completo">Tiempo Completo</option>
                 <option value="Medio">Medio Tiempo</option>
                 <option value="Por Proyecto">Por Proyecto</option>
                 {{/tipoContrato}}
             </select>
         </div>
         <h3>Descripción del Puesto</h3>
         <div class="campo descripcion">
             <label for="">Descripción</label>
             <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
             <trix-editor input="x"></trix-editor>
         </div>

         <h3>Conocimientos</h3>
         <ul class="lista-conocimientos">
             {{#seleccionarSkills vacante.skills}}
             {{/seleccionarSkills}}
         </ul>

         <div class="campo centrar-horizontal">
             <input type="hidden" name="skills" id="skills">
             <input type="submit" value="Guardar cambios" class="btn btn-azul">
         </div>
    
    </form>
</main>