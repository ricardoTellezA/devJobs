<main class="contenedor">
  <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
    <div class="campo">
      <label for="">
        Nombre
      </label>
      <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Nombre"  />
    </div>
    <div class="campo">
      <label for="">
        E-mail
      </label>
      <input value="{{usuario.email}}" type="email" name="email" placeholder="email"  />
    </div>
    <div class="campo">
      <label for="">
        Password
      </label>
      <input type="password" name="password" placeholder="Password"/>
    </div>

    <div class="campo">
      <label for="">Imagen</label>
      <input type="file" name="imagen" placeholder="Imagen de Perfil"/>
      <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
    </div>
      <div class="campo"> 
     
      <input type="submit" class="btn btn-azul" value="Guardar Cambios"  />
    </div>
  </form>
</main>